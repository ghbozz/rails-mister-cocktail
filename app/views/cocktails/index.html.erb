
<div class="container">
  <h1>All Cocktails</h1>
  <!-- <p>Find me in app/views/cocktails/index.html.erb</p> -->

  <ul class="list-group">
    <% @cocktails.each do |cocktail| %>
      <li class="list-group-item"><%= link_to cocktail.name, cocktail_path(cocktail) %></li>
    <% end %>
  </ul>
  <%= link_to 'Add a Cocktail', new_cocktail_path, :class => 'btn btn-primary' %>
</div>
