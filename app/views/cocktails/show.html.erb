<div class="container">
  <div class="show-container">
    <div class="details-container">
      <h1><%= @cocktail.name %></h1>
      <h4>Ingredients (<%= @cocktail.ingredients.count %>)</h4>

      <ul class="list-group">
        <% @cocktail.doses.each do |dose| %>
        <li class="list-group-item">
          <%= dose.description %> - <%= dose.ingredient.name %>
          <%= link_to "Delete", dose_path(dose), method: :delete %>
        </li>
        <% end %>
      </ul>

      <h4>Reviews (<%= @cocktail.reviews.count %>)</h4>

      <ul class="list-group">
        <% @cocktail.reviews.each do |dose| %>
        <li class="list-group-item">
          <%= dose.content %>
        </li>
        <% end %>
      </ul>

      <h4>Add a review</h4>
      <%= simple_form_for [@cocktail, @review] do |f| %>
        <%= f.input :content%>
        <%= f.submit "Add ur Review", class: "btn btn-primary", id: 'create-cocktail-btn' %>
      <% end %>
      <br>
      <%= link_to 'Add a Dose', new_cocktail_dose_path(@cocktail), :class => 'btn btn-primary'  %>
      <%= link_to 'Back to Cocktails', cocktails_path, :class => 'btn btn-info' %>
      <%= link_to "Delete", cocktail_path(@cocktail), method: :delete, :class => 'btn btn-danger' %>
    </div>
    <div class="details-image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url(<%=@cocktail.photo%>);">
  </div>
</div>
