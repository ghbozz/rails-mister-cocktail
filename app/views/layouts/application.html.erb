      </a>

      <!-- Right Navigation -->
      <div class="navbar-wagon-right hidden-xs hidden-sm">
        <ul class="list-unstyled list-inline text-center">
        <li><%= link_to 'Add Cocktail', new_cocktail_path, class: 'btn btn-primary' %></li>
        <li><%= link_to 'All Cocktails', cocktails_path, class: 'btn btn-info' %></li>
        </ul>

      </div>
    </div>

    <%= yield %>

